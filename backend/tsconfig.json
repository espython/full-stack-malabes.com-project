{
  "compilerOptions": {
    "target": "ESNext",
    // "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    // "module": "CommonJS",
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
